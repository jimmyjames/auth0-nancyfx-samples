<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>

	<style type="text/css">

		body {
			text-align: center;
		}

	</style>

</head>
<body>
<h2>Login Page</h2>
<script src="https://cdn.auth0.com/js/auth0/8.7/auth0.min.js"></script>
<script>
var webAuth = new auth0.WebAuth({
	domain: '@Model.domain',
	clientID: '@Model.client_id',
	redirectUri: 'http://localhost:3579/login-callback',
	audience: `https://@Model.domain/userinfo`,
	responseType: 'code',
	scope: 'openid name'
});

webAuth.authorize();
</script>
</body>
</html>
